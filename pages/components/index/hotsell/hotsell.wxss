/* pages/components/index/hotsell/hotsell.wxss */
/* 今日折扣 */
.swraper-item{
  width: auto;
  margin-top: 20rpx;
  padding: 16rpx;
  background: #fff;
}
.swraper-item .title{
  font-size: 20px;
  height: 60rpx;
  font-weight: 600;
  line-height: 20px
}
.title .en{
  font-size: 16px;
  font-weight: 300;
  color: #74b9ff;
}
.title .more{
  color: gray;
  font-size: 16px;
  font-weight: 300;
  line-height: 48rpx;
}
.sellimg-l{
  width: 35%;
  height: 100%;
}
.sellimg-l-img {
  width: 100%;
  height: 430rpx;
}
.sellimg-r{
  width: 63%;
  height: 100%;
  margin-left: 2%;
}
.sellimg-r .sellimg-r-top,
.sellimg-r .sellimg-r-bottom{
  width: 100%;
  height: 210rpx;
}
.sellimg-r .sellimg-r-top{
  margin-bottom: 10rpx;
}
.sellimg-r-top image,
.sellimg-r-bottom image{
  width: 100%;
  height: 100%;
}
.hotsale-img{
  width: 100%;
  height: 300rpx;
}
.hotsale-img image{
  width: 100%;
  height: 100%;
}
.hotsale-cont{
  margin-top: 10rpx;
}
.hotsale-cont .hotsale-item{
  overflow: hidden;
  width: 32%;
  margin-right: 2%;
}
.hotsale-cont .hotsale-item:last-child{
  margin-right: 0;
}
.hotsale-item .goods-img{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.goods-img image{
  width: 100%;
  height: 100%;
}
.hotsale-item .goods-title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}