.rexiao{
  position: relative;
  background-color: #eeeeee;
}
.position .searchbox{
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 20rpx;
}
.searchbox .picker{
  color: #fff;
}
.search{
  width: 260px;
  height: 100%;
  margin-right: 4%;
  background: rgba(255, 255, 255, .4);
  border-radius: 40rpx;
  overflow: hidden;
  position: relative;
}
.mapicon{
  color: #fff;
  position: absolute;
  top: 50%;
  right: -30rpx;
  transform: translateY(-50%)
}
.search .searchinput{
  width: 100%;
  height: 100%;
  padding: 0 34rpx;
  color: #000;
}
.sraicon{
  /* color: rgba(0, 0, 0, .7); */
  color: #666;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}