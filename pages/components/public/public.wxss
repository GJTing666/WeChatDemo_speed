/* 公共样式 */
.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/* 单行文字超出隐藏 */
.text-overflow{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/* 多行文字超出隐藏加省略号 限制行数 */
.overflow{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.text-center{
  text-align: center;
}
.text-left{
  text-align: left;
}
.text-right{
  text-align: right;
}
.color-main{
  color: #eb544d;
}
.color-blue{
  color: #00b7ee;
}