/* 导航栏样式 */
page{
  width: 100%;
  height: 100%;
}
.navcontainer{
  width: 100%;
  height: 100%;
}
.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 14px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  width: 20%;
  position: relative;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: red;
  font-size: 16px;
  font-weight: 600;
}
.nav-item.active:after{
content: "";
display: block;
position: absolute;
bottom: 0;
left: 50%;
height: 8rpx;
width: 30rpx;
border-radius: 4rpx;
transform: translateX(-50%);
background: #f0145a;
}
.tab-box{
  background: greenyellow;
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}
